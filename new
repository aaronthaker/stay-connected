import os
import re

# Directory of the txt files (current directory)
directory = '.'

# Mapping of mumbling words to 'uh'
mumbling_map = {'um': 'uh', 'er': 'uh', 'oh': 'uh', 'ah': 'uh'}

# Function to replace words using regular expressions
def replace_mumbling(text):
    for word, replacement in mumbling_map.items():
        text = re.sub(r'\b' + re.escape(word) + r'\b', replacement, text)
    return text

# Loop through each file in the directory
for filename in os.listdir(directory):
    if filename.endswith('.txt'):
        filepath = os.path.join(directory, filename)
        with open(filepath, 'r') as file:
            content = file.read()
        
        # Replace the mumbling words
        new_content = replace_mumbling(content)
        
        # Write the updated content back to the file
        with open(filepath, 'w') as file:
            file.write(new_content)

print("All files have been updated.")
