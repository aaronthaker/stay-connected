import csv

def read_csv_line(file_path, line_number):
    try:
        with open(file_path, mode='r', newline='') as file:
            reader = csv.reader(file)
            for current_line, row in enumerate(reader, start=1):
                if current_line == line_number:
                    return row
        return f"Line {line_number} not found. File might be shorter."
    except FileNotFoundError:
        return f"File '{file_path}' not found."
    except Exception as e:
        return f"An error occurred: {e}"

# Example usage
if __name__ == "__main__":
    path = input("Enter CSV file path: ")
    try:
        line_num = int(input("Enter line number to read: "))
        result = read_csv_line(path, line_num)
        print("Line content:", result)
    except ValueError:
        print("Please enter a valid integer for the line number.")