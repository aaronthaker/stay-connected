import json

def describe_structure(obj, path="root"):
    structure = []
    if isinstance(obj, dict):
        for key, value in obj.items():
            new_path = f"{path}.{key}"
            structure.extend(describe_structure(value, new_path))
    elif isinstance(obj, list):
        if obj:
            structure.extend(describe_structure(obj[0], f"{path}[0]"))
        else:
            structure.append(f"{path}[0]: empty list")
    else:
        structure.append(f"{path}: {type(obj).__name__}")
    return structure

def main():
    print("Paste your JSON object (end input with Ctrl+D on Linux/Mac or Ctrl+Z on Windows):")
    input_lines = []
    try:
        while True:
            input_lines.append(input())
    except EOFError:
        pass

    try:
        json_data = json.loads("\n".join(input_lines))
    except json.JSONDecodeError as e:
        print(f"Invalid JSON: {e}")
        return

    print("\nSTRUCTURE:")
    for line in describe_structure(json_data):
        print(line)

if __name__ == "__main__":
    main()