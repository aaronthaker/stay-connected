@echo off
setlocal enabledelayedexpansion

:: Ask the user for the number of JSON files to generate
set /p fileCount=How many JSON files would you like to generate? 

:: Validate input
for /f "delims=0123456789" %%a in ("%fileCount%") do (
    echo Invalid input. Please enter a number.
    goto :eof
)

:: Generate the JSON files
for /l %%i in (1,1,%fileCount%) do (
    echo {} > page%%i.json
    echo Created page%%i.json
)

echo Done.
pause