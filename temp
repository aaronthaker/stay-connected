def load_csv(path: Path, date_cols: list[str]) -> pd.DataFrame:
    if not path.exists():
        raise FileNotFoundError(f"File not found: {path}")
    df = pd.read_csv(path, skiprows=[0], header=0)
    df.columns = df.columns.str.strip()
    if not date_cols:
        raise ValueError("Expect at least one date column but none were provided")
    
    for col in date_cols:
        # Remove ' UTC' suffix, strip whitespace, then parse
        df[col] = pd.to_datetime(
            df[col].str.replace(" UTC", "", regex=False).str.strip(),
            format="%d/%m/%Y %H:%M:%S",
            dayfirst=True,
            errors="raise"
        ).dt.tz_localize("UTC")  # manually set timezone
    return df